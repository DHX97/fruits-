.modal_box {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-items: center;
  position: fixed;
  top: 0;
}

.zhezhao {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.main_box {
  width: 468rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 28rpx;
  z-index: 100;
  padding: 50rpx 70rpx;
}

.main_title {
  width: 100%;
  text-align: center;
  font-size: 34rpx;
}

.btn_group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 30rpx;
}
.btn_style {
  width: 200rpx;
  height: 74rpx;
  border-radius: 48rpx;
  text-align: center;
  line-height: 74rpx;
  font-size: 30rpx;
}
.cancel_style{
  border: 2rpx solid rgba(151,151,151,1);
}
.confirm_style{
  border: 2rpx solid #f2712b;
background: #f2712b;
}