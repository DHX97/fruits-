.info_box {
  padding: 40rpx 24rpx 26rpx 36rpx;
  border-bottom: solid 20rpx rgba(244,244,244,1);
}
.titles {
  border-bottom: solid 2rpx rgba(236,238,244,1);
  padding-bottom: 32rpx;
  margin-bottom: 26rpx;
}
.reddot {
  background-color: red;
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  font-family: PingFangSC-Medium, PingFang SC;
  color: rgba(35, 32, 32, 1);
}

.msg {
  font-size: 28rpx;
  font-weight: 400;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(35, 32, 32, 1);
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.time {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(139, 139, 139, 1);
}
